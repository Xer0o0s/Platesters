{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}Collections
{% endblock %}

{% block body %}
	<div class="container-fluid p-5">
		<div class="row justify-content-center gx-4 gx-lg-5 p-4 m-3 shadow rounded-3" style="background-color :#eaeaea">
			<h5 class="text-center text-secondary pt-4 display-1 fw-bold border-bottom ">Collections</h5>
			{% for collection in collections %}
				<div class="px-1 px-lg-2 col-4 col-sm-6 col-md-6 col-xl-3 mb-5">
					<div class="card border-1 mt-5 rounded-3 shadow" style="border-color :#000000">
						<a href="{{ path('incollections', {'id': collection.id}) }}"><img src="{{'coll/' ~ collection.image}}" class="card-img-top rounded-top-3"/></a>
						<div class="card-body rounded-bottom-3 p-1" style="background-color:#D6D6D6;">
							<p class="card-text text-center p-3">{{collection.libelle}}</p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}

