{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}Liste Collections
{% endblock %}


{% block body %}
	<div class="container-fluid">
		<div class=" row justify-content-center">
			<div class="col-12 col-md-9 p-4 m-3 rounded-5 shadow" style="background-color :#eaeaea">
				<h1 class="text-center text-secondary mt-4 pt-4 display-1 fw-bold ">Liste Collections</h1>
				<div class="row mb-4 d-flex justify-content-between align-items-center mt-4 text-center">
					<div class="col-2">
						Image
					</div>
					<div class="col-2">
						Nom
					</div>
				</div>
				{% for collection in collections %}
				<hr>
					<div class="row mb-4 d-flex justify-content-between align-items-center mt-4 text-center">
						<div class="col-2">
							{% set url = 'coll/'~collection.image %}
							<img src="{{asset(url)}}"style="max-width: 500px; height: auto;"/>
						</div>
						<div class="col-2">
							<h6 class="text-muted text-center">{{ collection.libelle | capitalize }}<h6>
						</div>
					</div>
				</hr>
				{% endfor %}

			</div>
		</div>
	</div>
{% endblock %}